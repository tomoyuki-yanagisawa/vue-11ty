---
title: Bootstrap Page
appFile: bs
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>

    <!-- Vue -->
    <script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.min.js"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <h1>My name is <%= title %></h1>

    <div id="app">
      <!-- Button trigger modal -->
      <button type="button" @click="setupForm(1)" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Modal1
      </button>
      <button type="button" @click="setupForm(2)" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Modal2
      </button>
      
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal for {{ formId }}</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <input v-model="formData.amount" placeholder="edit me">
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>

      <p>formId: {{ formId }}</p>
      <p>formData.amount: {{ formData.amount }}</p>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Vue -->
    <script src="/assets/vue/<%= appFile %>.js"></script>
  </body>
</html>
